<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/rounder_cardview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<!--           <androidx.cardview.widget.CardView-->
<!--               app:cardCornerRadius="20dp"-->
<!--               android:layout_width="wrap_content"-->
<!--               android:layout_height="match_parent">-->
<!--           </androidx.cardview.widget.CardView>-->
               <ImageView
                   android:src="@drawable/copi"
                   android:id="@+id/img_material"
                   android:layout_width="match_parent"
                   android:layout_height="120dp"/>

        </LinearLayout>

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nama_material"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAllCaps="true"
                        android:text="coverall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tgl_material"
                        android:textSize="10dp"
                        android:textColor="@color/textDark"
                        android:text="09 OKT 2022 08:29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/material_total"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_primary"
                        android:textAllCaps="true"
                        android:text="13/pr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginBottom="5dp"
                android:layout_marginTop="12dp"
                android:background="@color/textDark"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/container"
                android:textStyle="bold"
              android:layout_gravity="right"
                android:textSize="10dp"
                android:textColor="@color/textDark"
                android:textAllCaps="true"
                android:text="c2 - container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>