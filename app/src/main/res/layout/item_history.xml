<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:layout_margin="6dp"
    android:background="@drawable/rounder_cardview_item"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="10dp"
            android:rotation="78"
            android:src="@drawable/in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:id="@+id/summery_name"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:text="Stenly Samberi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

               <TextView
                   android:id="@+id/summer_name_produk"
                   android:textColor="@color/textDark"
                   android:textSize="16dp"
                   android:text="Glass Safety"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/summery_created"
                    android:textSize="15dp"
                    android:text="20 Sept 2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
           android:gravity="right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/summery_total"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/purple_200"
                android:text="40Bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/summery_status"
                android:textColor="@color/green"
                android:text="In"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>